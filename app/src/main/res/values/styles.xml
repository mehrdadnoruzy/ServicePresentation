<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="big_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#08143C</item>
    </style>

    <style name="normal_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#08143C</item>
    </style>

    <style name="sub_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#08143C</item>
    </style>

    <style name="normal_title_bold" parent="normal_title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#727991</item>
    </style>

    <style name="description_cell">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#727991</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="price">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#22C8EF</item>
    </style>

    <style name="discount">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FB2F5F</item>
    </style>

    <style name="new_and_discount_percentage">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="home_menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#103AC1</item>
    </style>

    <style name="small_gray_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#727991</item>
    </style>

</resources>